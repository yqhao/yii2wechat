<!--page/pages/orderDetail/orderDetail.wxml-->
<view class='index'>
  <view class='index-bd'>
    <block wx:if="{{orderInfo.cover}}">
      <view>
        <image bindtap='turnToPackage' data-pid='{{orderInfo.order.package_id}}' class='ticket-image' src='{{orderInfo.cover}}' mode='aspectFill'></image>
      </view>
    </block>
    <view class='v-item'>
      <view class='v-item-sub'>
        <view class='package-title'>
          <text>{{orderInfo.order.package_title}}</text>
        </view>
        <view class="light-grep"></view>
        <!-- <view class='ticket-title'>
          <text>{{orderInfo.item.package_item_title}}</text>
        </view>
        <view class="light-grep"></view> -->
        <view class='order-info'>



          <view class='order-info-item'>
            <view class='order-info-item-label'>
              <text>订单号</text>
            </view>
            <view class='order-info-item-value'>
              <text>{{orderInfo.order.code}}</text>
            </view>
          </view>

          <view class="light-grep"></view>

          <view class='order-info-item'>
            <view class='order-info-item-label'>
              <text>下单时间</text>
            </view>
            <view class='order-info-item-value'>
              <text>{{orderInfo.order.created_at}}</text>
            </view>
          </view>
          <view class="light-grep"></view>

          <view class='order-info-item'>
            <view class='order-info-item-label'>
              <text>总额</text>
            </view>
            <view class='order-info-item-value'>
              <text class='price'>¥{{orderInfo.order.total_price}}</text>
            </view>
          </view>
          <view class="light-grep"></view>

          <block wx:if="{{orderInfo.order.coupon_code}}">
          <view class='order-info-item'>
            <view class='order-info-item-label'>
              <text>优惠码</text>
            </view>
            <view class='order-info-item-value'>
              <text>{{orderInfo.order.coupon_code}}</text>
            </view>
          </view>
          <view class="light-grep"></view>
          <view class='order-info-item'>
            <view class='order-info-item-label'>
              <text>优惠金额</text>
            </view>
            <view class='order-info-item-value'>
              <text class='price'>-¥{{orderInfo.order.discount}}</text>
            </view>
          </view>
          <view class="light-grep"></view>
          </block>

          <view class='order-info-item'>
            <view class='order-info-item-label'>
              <text>支付状态</text>
            </view>
            <view class='order-info-item-value'>
              <text>{{orderInfo.order.payment_status_label}}</text>
            </view>
          </view>
          <view class="light-grep"></view>
          <view class='order-info-item'>
            <view class='order-info-item-label'>
              <text>操作</text>
            </view>
            <view class='order-info-item-value'>
              <view class='order-btn'>
                <block wx:if="{{orderInfo.order.payment_status != 1}}">
                  <navigator open-type="navigate" url='/page/pages/pay/pay?id={{orderInfo.order.id}}'>付款</navigator>
                  <navigator bindtap="orderCancel" data-oid='{{orderInfo.order.id}}' url='/page/pages/userCenter/userCenter'>取消</navigator>
                  <!-- <navigator>修改</navigator> -->
                </block>
                <block wx:else>

                  <!-- <navigator>退款</navigator> -->
                </block>
              </view>


            </view>
          </view>
        </view>
      </view>
    </view>

    <block wx:for="{{orderInfo.order.items}}" wx:for-item="orderItems" wx:key="orderItems">
      <view class='v-item'>
        <view class='v-item-sub'>
          <view class='package-title'>
            <text>详情</text>
          </view>
          <view class="light-grep"></view>
          <view class='order-info'>
            <view class='order-info-item'>
              <view class='order-info-item-label'>
                <text>门票</text>
              </view>
              <view class='order-info-item-value'>
                <text>{{orderItems.package_item_title}}</text>
              </view>
            </view>

            <view class="light-grep"></view>
            <view class='order-info-item'>
              <view class='order-info-item-label'>
                <text>价格</text>
              </view>
              <view class='order-info-item-value'>
                <text class='price'>¥{{orderItems.price}}</text>
              </view>
            </view>
            <view class="light-grep"></view>
            <view class='order-info-item'>
              <view class='order-info-item-label'>
                <text>数量</text>
              </view>
              <view class='order-info-item-value'>
                <text>{{orderItems.quantity}}</text>
              </view>
            </view>

            <view class="light-grep"></view>
            <view class='order-info-item'>
              <view class='order-info-item-label'>
                <text>出行日期</text>
              </view>
              <view class='order-info-item-value'>
                <text>{{orderItems.use_date}}</text>
              </view>
            </view>

          </view>
        </view>
      </view>
  </block>

  <view class='v-item'>
    <view class='v-item-sub'>
      <view>
        <text>联系人信息</text>
      </view>
      <view class='order-info'>
        <view class='order-info-item'>
          <view class='order-info-item-label'>
            <text>联系人</text>
          </view>
          <view class='order-info-item-value'>
            <text>{{orderInfo.order.contact_name}}</text>
          </view>
        </view>
        <view class="light-grep"></view>
        <view class='order-info-item'>
          <view class='order-info-item-label'>
            <text>联系电话</text>
          </view>
          <view class='order-info-item-value'>
            <text>{{orderInfo.order.contact_mobile}}</text>
          </view>
        </view>
        <view class="light-grep"></view>
        <view class='order-info-item'>
          <view class='order-info-item-label'>
            <text>备注</text>
          </view>
          <view class='order-info-item-value'>
            <text>{{orderInfo.order.remark}}</text>
          </view>
        </view>

      </view>
    </view>

  </view>
</view>

</view>