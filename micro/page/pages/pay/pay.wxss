/* page/pages/pay/pay.wxss */
.tips{
  padding: 120rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.tips navigator{
  padding-top: 24rpx;
}

.index-bd {
  font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
}

.index-content{
  height: 700rpx;
  width: 670rpx;
  margin: 40rpx auto;
   background-color: white; 
  /* background-color: brown; */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.icon{
  display: flex;
  flex-direction: row;
  justify-content: center;

  padding: 80rpx 0 20rpx 0;

  /* background-color: yellow; */
}
.icon image{
  width: 96px;
  height: 96px;
}

.amount{
  display: flex;
  flex-direction: row;
  justify-content: center;

  padding: 10rpx 0;

  /* background-color: goldenrod; */
}
.amount text{
  font-size: 80rpx;
}

.button{
    display: flex;
  flex-direction: row;
  justify-content: center;

  padding: 10rpx 0;
}
.button button{
  width: 80%;
}
.light-grep{
  margin: 0 auto;
  width: 80%;
  border-bottom: 1px solid #F2F2F2; 
}