<!--page/pages/pay/pay.wxml-->
<view class='index'>
  <view class='index-bd'>


    <view class='index-content'>
      <view class='icon'>
      <image src='/image/coin.png'></image>
      </view>
      <view class='amount'><text>¥<block wx:if='{{paymentInfo.amount}}'>{{paymentInfo.amount}}</block><block wx:else>0</block></text></view>
      <view><view class='light-grep'></view></view>
      <view class='button'>
      <button type="primary" size="default" form-type="submit"
        bindtap="wxPay">确定付款</button>
      </view>
    </view>

  </view>
</view>



