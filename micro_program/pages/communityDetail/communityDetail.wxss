}
.community-hot-wrap{
  display: inline-block;
  color: #ff6c3e;
  font-size: 12px;
  float: right;
}
.community-hot{
  display: inline-block;
  width: 16px;
  height: 16px;
  background-color: #ff6c3e;
  font-size: 12px;
